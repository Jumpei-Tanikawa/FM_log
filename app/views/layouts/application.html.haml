!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FMLog
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body

  %header.header
    .header__interior
      .middle
        %h1.icon
          = link_to "/" do
            = image_tag 'material/logo/logo.png', alt: 'ロゴ'
        .searchBox
          %form{action: '#', accept: {charset: "UTF-8"}, method: "get"} 
            %input{name: "utf8", type: "hidden", value: "✔︎"}
            %input{class: "serchBox--input", id: "searchInput", name: "key", placeholder: "キーワードから探す"}
            %button{button: "submit"}
              .searchBox__icon
                = image_tag 'material/icon/icon-search 1.png', alt: 'サーチアイコン'
            %input{:name => "authenticity_token", :type => "hidden", :value => "E7WEpoIpr6jLOvBMUBgk49eXaFDDWeSCJkT0iVYeFZjedgoevFbggRrwM1MWfNwmbprOQFUumSqEkU6pUS5W0g=="}
        %ul.resultLists

      %nav
        %ul.listLeft
          %li.listLeft__item.listLeft__item-first
            = link_to "カテゴリー", "#", id: "categoryBtn"
          .tree.displayNone
            %ul.categoryTree
              %li.categoryTree--item
                = link_to "レディース", "#", id: 1
              %li.categoryTree--item
                = link_to "メンズ", "#", id: 2
              %li.categoryTree--item
                = link_to "ベビー・キッズ", "#", id: 3
              %li.categoryTree--item
                = link_to "インテリア・住まい・小物", "#", id: 4
              %li.categoryTree--item
                = link_to "本・音楽・ゲーム", "#", id: 5
              %li.categoryTree--item
                = link_to "おもちゃ・ホビー・グッズ", "#", id: 6
              %li.categoryTree--item
                = link_to "コスメ・香水・美容", "#", id: 7
              %li.categoryTree--item
                = link_to "家電・スマホ・カメラ", "#", id: 8
              %li.categoryTree--item
                = link_to "スポーツ・レジャー", "#", id: 9
              %li.categoryTree--item
                = link_to "ハンドメイド", "#", id: 10
              %li.categoryTree--item
                = link_to "チケット", "#", id: 11
              %li.categoryTree--item
                = link_to "自動車・オートバイ", "#", id: 12
              %li.categoryTree--item
                = link_to "その他", "#", id: 13
          %li.listLeft__item
            = link_to "ブランド", "#", id: "brandBtn"
            %ul.brandPlldouwn.displayNone

        %ul.listsRight
          %li.listsRight__item.listsRight__item--login
            = link_to "ログイン", "#"
          %li.listsRight__item.listsRight__item--new
            = link_to "新規会員登録", "#"

    = yield

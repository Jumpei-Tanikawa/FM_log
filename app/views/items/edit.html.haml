%header.single__header
  %h1
    = link_to "#" do
      = image_tag 'material/logo/logo.png', alt: 'サンプルロゴ'
%main
  %section.l__single__container
    .sell__container__inner
      %h2.l__single__head
        商品情報を入力
      = form_with url: {action: "edit"}, model: @item, local: true, class: "sell__form" do |form|
        .sell__upload__box
          %h3.sell__upload__head
            出品画像
            %span.form__require
              必須
          .sell__dropbox__container.clearfix
            .SellPage__contents__detail
              画像をアップロード出来ます
            .SellPage__contents__imagefield
            = form.label "item_images_attributes_0_image" , class: "SellPage__contents__imgbtm", data:{index: 0} do
              = image_tag "material/icon/icon_camera.png", class: "SellPage__contents__imgbtm--icon"
              .SellPage__contents__imgbtm--text
                クリックしてファイルをアップロード
            = form.fields_for :item_images do |i|
              .SellPage__contents__imgbtm--filefield
                = i.file_field :image, class: "SellPage__contents__imgbtm--file"

            
        .sell__content
          .form__group
            %label
              商品名
              %span.form__require
                必須
            %div
              = form.text_field :name, placeholder: "40文字まで", class: "SellPage__format--text"
              
          .form__group
            %label
              商品の説明
              %span.form__require
                必須
            %textarea{class: "textarea__default", rows: 5, placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"}
        .sell__content.clearfix
          %h3.sell__sub__head
            商品の詳細
          .sell__form__box
            .form__group
              %label
                カテゴリー
                %span.form__require
                  必須
              %div
                .select__wrap
                  #category_field
                    = form.collection_select :category_id, @parents, :id, :name, { include_blank: "---", selected:"" }, id: "category_form", class: "SellPage__format--select"
                    
            .form__group
              %label
                商品の状態
                %span.form__require
                  必須
              .select__wrap
                = form.select :status_id, options_for_select(Status.all.map { |st| [st.status, st.id] }, 0), {prompt: "選択してください"} ,class: "SellPage__format--select"
                
        .sell__content.clearfix
          %h3.sell__sub__head
            配送について
          .sell__form__box
            .form__group
              %label
                配送料の負担
                %span.form__require
                  必須
              .select__wrap
                = form.select :delivery_to_pay_id, options_for_select(DeliveryToPay.all.map { |pay| [pay.to_pay, pay.id] }, 0), {prompt: "選択してください"} ,class: "SellPage__format--select"
                
            .form__group
              %label
                発送元の地域
                %span.form__require
                  必須
              .select__wrap
                = form.select :delivery_area_id, options_for_select(Prefecture.all.map { |pre| [pre.name, pre.id] }, 0), {prompt: "選択してください"} ,class: "SellPage__format--select"
                
            .form__group
              %label
                発送までの日数
                %span.form__require
                  必須
              .select__wrap
                = form.select :delivery_day_id, options_for_select(DeliveryDay.all.map { |day| [day.days, day.id] }, 0), {prompt: "選択してください"} ,class: "SellPage__format--select"
                
        .sell__content.clearfix
          %h3.sell__sub__head
            販売価格
          .sell__form__box
            %ul.sell__price
              %li.form__group
                .clearfix
                  %label.l__left
                    価格
                    %span.form__require
                      必須
                  .l__right.sell__price__input
                    .sell__price
                      .sell__price__text
                        ¥
                      %div
                        = form.number_field :price, in: 300.0..9999999.0, step: 1, value: 0, class: "SellPage__format--numfield SellPage__format--numfield--prices input__default"
                        
        = form.submit "変更する", class: "SellPage__format__submit btn__change sell__form"
      = link_to "#", class: "btn__default btn__gray" do
        キャンセル
    .SellPage__footer
      = image_tag "material/logo/logo.png", class: "SellPage__footer__logo"
